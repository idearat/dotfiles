[user]
  email = ss@technicalpursuit.com
  name = idearat

[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = less

[credential]
  helper = osxkeychain

[color]
  ui = true

[commit]
  template = ~/.gitmessage.txt

[diff]
  tool = araxis

[difftool "araxis"]
  path = compare

[merge]
  tool = araxis

[mergetool "araxis"]
  path = compare
  keepBackup = false

[push]
  default = simple
