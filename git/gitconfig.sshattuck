[user]
	name = Scott Shattuck
	email = sshattuck@twitter.com

[core]
	excludesfile = ~/.gitignore
	whitespace = trailing-space,space-before-tab
[mergetool]
  tool = araxis
	keepBackup = false
[color]
	ui = auto
[diff]
  tool = araxis
	renames = copies
	mnemonicprefix = true
[branch]
	autosetupmerge = true
[merge]
  tool = araxis
	stat = true
