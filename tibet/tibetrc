#!/bin/bash
#
# .tibetrc: This file is triggered by .login.after.
#
# This file runs after ALL shell logic so it's got override power. Use wisely :)

# ---
# aliases
# ---

alias base='export TIBET_HOME="${TPI_HOME}/TIBET"'
alias base3='export TIBET_HOME="${TPI_HOME}/TIBET3"'
alias 3='base3;cdtibet;clear'
alias 5='base;cdtibet;clear'
alias cli='5;cd src/cli;clear'
alias dna='5;cd dna/default;clear'

# work from old codebase for now
base

# bash environment management
alias vimtibet="vi $HOME/.tibetrc"
alias srctibet="source $HOME/.tibetrc"

# cd directory aliases
