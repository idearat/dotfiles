# ---
# functions
# ---

function greptibet {
  pushd ${TIBET_HOME} > /dev/null
  grepall "$*"
}

function vt {
  pushd ${TIBET_HOME} > /dev/null
  mvim $(ack -g "$@")
  popd > /dev/null
}

# ---
# program execution
# ---

# TIBET Development Server
alias tdsstart="cdtds; java TDS.TDS"
alias tdcstart="cdtds; java TDS.TDS -console"

